{
  "name": "next-mva",
  "version": "0.0.1",
  "description": "This small app has been developed to provide a minimum viable architecture of a scalable next application.",
  "main": "index.js",
  "author": "Fadi ABDELMESSIH <fadi.william.ghali@gmail.com> (https://www.levioza.fr/)",
  "license": "Apache V2",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "NODE_ENV=production node server.js",
    "test-watch": "jest --watch",
    "test": "jest --coverage",
    "commitizen": "commitizen",
    "commit": "git-cz",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "deploy": "now --token $NOW_TOKEN --public",
    "build": "next build"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/utils/fileTransformer.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "getLastRelease": "last-release-git"
  },
  "now": {
    "name": "next-mva"
  },
  "dependencies": {
    "accepts": "1.3.4",
    "axios": "0.17.1",
    "glob": "7.1.2",
    "intl": "1.2.5",
    "js-cookie": "2.2.0",
    "mobx": "3.5.1",
    "mobx-react": "4.4.1",
    "mobx-state-tree": "1.3.1",
    "mobx-utils": "3.2.2",
    "next": "5.0.0",
    "next-cookies": "1.0.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-intl": "2.4.0",
    "rxjs": "5.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@types/enzyme": "3.1.9",
    "@types/jest": "22.1.2",
    "@types/js-cookie": "2.1.0",
    "@types/react": "16.0.37",
    "@types/react-dom": "16.0.4",
    "@types/react-intl": "2.3.5",
    "@types/react-test-renderer": "16.0.1",
    "@zeit/next-sass": "0.0.9",
    "awesome-typescript-loader": "3.4.1",
    "caniuse-lite": "^1.0.30000697",
    "codecov": "3.0.0",
    "commitizen": "2.9.6",
    "css-loader": "0.28.9",
    "cssnano": "3.10.0",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "express": "4.16.2",
    "ghooks": "2.0.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.2.2",
    "jest-localstorage-mock": "2.2.0",
    "json-query": "2.2.2",
    "node-sass": "4.7.2",
    "now": "10.1.6",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-font-magician": "^2.1.0",
    "postcss-loader": "2.1.0",
    "react-test-renderer": "16.2.0",
    "store2": "2.7.0",
    "style-loader": "0.19.1",
    "ts-jest": "22.0.4",
    "tslint": "5.9.1",
    "tslint-react": "3.5.0",
    "typescript": "2.7.1",
    "webpack": "^3.0.0"
  }
}
